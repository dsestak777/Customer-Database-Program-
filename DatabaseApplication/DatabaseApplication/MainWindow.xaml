<Window x:Class="DatabaseApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="640" Loaded="Window_Loaded" SizeToContent="WidthAndHeight">
    <Grid Loaded="Grid_Loaded">
        <Menu HorizontalAlignment="Left" Height="39" Margin="0,10,0,0" VerticalAlignment="Top" Width="633">
            <MenuItem Header="Menu">
                <MenuItem Header="_Add Record" HorizontalAlignment="Left" Width="202" Click="AddRecord_Click"/>
                <MenuItem Header="_Delete Record" HorizontalAlignment="Left" Width="202" Click="DeleteRecord_Click"/>
                <MenuItem Header="_Exit" HorizontalAlignment="Left" Width="202" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="_Edit Record" HorizontalAlignment="Left" Width="202" Click="EditRecord_Click"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" HorizontalAlignment="Left" Width="202" Click="About_Click"/>
            </MenuItem>
        </Menu>
        <DataGrid x:Name="CustomerDataGrid" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Height="225" Width="615" Loaded="Grid_Loaded"/>

    </Grid>
</Window>
